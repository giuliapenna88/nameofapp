<div class="container">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="field pad-top form-group">
   <h2>Sign up</h2>

    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Your Email *"%>
  </div>

  <div class="field form-group">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Your password *"%>
  </div>
 <div class="field form-group">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm your password *"%>
  </div>

  <div class="field form-group">
    <%= f.submit "Sign up", class: "btn btn-primary btn-block", type: "submit" %>
  </div>
<% end %>
  <div class="field form-group">
<%= render "devise/shared/links"%>
  </div>

</div>
