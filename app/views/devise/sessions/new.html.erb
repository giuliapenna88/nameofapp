<div class="container">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group">
   <h2>Log in</h2>

    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Your Email *"%>
  </div>

  <div class="field form-group">
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Your password *"%>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field form-group">
    <ul class="nav navbar-nav">

            <li class="">
                    <%= f.check_box :remember_me %>
            </li>
            <li class="remember">
                    <%= f.label :remember_me %>
            </li>
      </ul>
    </div>
  <% end -%>

  <div class="field form-group">
    <%= f.submit "Log in", class: "btn btn-primary btn-block", type: "submit" %>
  </div>
<% end %>
  <div class="field form-group">

<%= render "devise/shared/links"%>
  </div>

</div>

