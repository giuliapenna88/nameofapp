    <div class="container">

      <form class="form-signin">
        <h2 class="form-signin-heading">Please Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Your email *", required: "true" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", autofocus: true, class: "form-control", placeholder: "Your password *", required: "true" %>
        </div>
  <% if devise_mapping.rememberable? -%>

        <div class="checkbox">
          <label>
            <%= f.check_box :remember_me%>
            <%= f.label :remember_me %>
          </label>
        </div>
  <% end -%>
  <div class="actions">
      <%= f.submit "Sign in", type="submit", class:'btn btn-lg btn-block btn-default' %>
    </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
      </form>

    </div> <!-- /container -->



  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>


